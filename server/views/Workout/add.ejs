<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%= title %></h1>

      <form class="form" method="POST">
        <div class="form-group">
          <label for="nameTextField">Exercise title</label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter the Name of your workout"
            name="Name"
            required
          />
        </div>

        <div class="form-group">
          <label for="weightTextField">weight</label>
          <input
            type="text"
            class="form-control"
            id="authorTextField"
            placeholder="Enter the total weight in lbs"
            name="weight"
            required
          />
        </div>

        <div class="form-group">
          <label for="setsTextField">sets</label>
          <input
            type="text"
            class="form-control"
            id="setsTextField"
            placeholder="Enter the total sets"
            name="sets"
            required
          />
        </div>

        <div class="form-group">
          <label for="repsTextArea">reps</label>
          <textarea
            type="text"
            class="form-control"
            id="repsTextArea"
            placeholder="Enter the reps"
            name="reps"
            required
          ></textarea>
        </div>

        <div class="form-group">
          <label for="timeTextField">time</label>
          <input
            type="text"
            class="form-control"
            id="timeTextField"
            placeholder="Enter the time"
            name="time"
            required
          />
        </div>

        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i> Submit
        </button>

        <a href="/bio_Workout" class="btn btn-warning">
          <i class="fas fa-undo"></i> Cancel</a
        >
      </form>
    </div>
  </div>
</div>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
